<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Pagination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="700.0" prefWidth="1322.0" styleClass="displayPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.guiControls.userMain.ordersController.OrdersController">
    <children>
      <Pagination fx:id="ordersDisplay" layoutX="52.0" layoutY="150.0" pageCount="10" prefHeight="550.0" prefWidth="1250.0" styleClass="bodyPane" />
      <HBox alignment="CENTER" layoutX="52.0" layoutY="80.0" prefHeight="60.0" prefWidth="1250.0" spacing="20.0" style="-fx-background-color: #000000;">
         <children>
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="100.0" styleClass="boldText" text="ID" />
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="200.0" styleClass="boldText" text="Asset Name" />
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="100.0" styleClass="boldText" text="Place Qty" />
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="100.0" styleClass="boldText" text="Resolved Qty" />
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="100.0" styleClass="boldText" text="Price" />
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="190.0" styleClass="boldText" text="Order Date" />
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="190.0" styleClass="boldText" text="Finish Date" />
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="120.0" styleClass="boldText" text="Status" />
            <Label alignment="CENTER" prefHeight="80.0" prefWidth="100.0" />
         </children>
      </HBox>
      <Button fx:id="sellFilterButton" layoutX="500.0" layoutY="11.0" mnemonicParsing="false" onAction="#changeTypeFilter" prefHeight="60.0" prefWidth="200.0" text="Sell orders" />
      <Button fx:id="buyFilterButton" disable="true" layoutX="750.0" layoutY="12.0" mnemonicParsing="false" onAction="#changeTypeFilter" prefHeight="60.0" prefWidth="200.0" text="Buy orders" />
    </children>
</AnchorPane>
